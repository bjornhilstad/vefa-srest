<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">

    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <!-- Enable access to all projects in the current multimodule build! -->
            <useAllReactorProjects>true</useAllReactorProjects>

            <!-- Now, select which projects to include in this module-set. -->
            <includes>
                <include>no.difi.ringo:ringo-server</include>
            </includes>
            <binaries>
                <includeDependencies>false</includeDependencies>
                <outputDirectory>war</outputDirectory>
                <unpack>false</unpack>
            </binaries>
<!--
            <sources>
                <fileSets>
                    <fileSet>
                        <directory>src</directory>
                    </fileSet>
                </fileSets>
            </sources>
-->
        </moduleSet>
        <!-- Includes the ringo-standalone program -->
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>no.difi.ringo:ringo-standalone</include>
            </includes>
            <binaries>
                <!-- The value is taken from the id element of the ringo-standalone assembly descriptor -->
                <attachmentClassifier>jar-with-dependencies-compiled-scope</attachmentClassifier>
                <includeDependencies>false</includeDependencies>
                <outputDirectory>bin</outputDirectory>
                <unpack>false</unpack>
            </binaries>

        </moduleSet>
    </moduleSets>
</assembly>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>standalone</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <files>
        <file>
            <source>target/ringo-client-${project.version}-jar-with-dependencies.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>ringo-client-${project.version}.jar</destName>
        </file>
        <file>
            <source>README.txt</source>
            <outputDirectory></outputDirectory>
            <lineEnding>dos</lineEnding>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <outputDirectory>conf</outputDirectory>
            <directory>src/main/conf</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>logs</outputDirectory>
            <directory>src/main/logs</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>bin</outputDirectory>
            <directory>src/main/bash</directory>
            <fileMode>0775</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>bin</outputDirectory>
            <directory>src/main/bat</directory>
            <lineEnding>dos</lineEnding>
        </fileSet>
        <fileSet>
            <outputDirectory>EHF-invoice-examples</outputDirectory>
            <directory>src/main/EHF-invoice-examples</directory>
        </fileSet>
    </fileSets>
</assembly>
